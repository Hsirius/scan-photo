{
  "semi": true,
  "trailingComma": "all",
  "singleQuote": true,
  "printWidth": 120,
  "tabWidth": 2,
  "endOfLine": "auto",
  "bracketSameLine": true,
  "overrides": [
    {
      "files": "*.scss",
      "options": {
        "parser": "scss"
      }
    }
  ],
  "importOrder": [
    "^react(.*)",
    "antd(.*)",
    "<THIRD_PARTY_MODULES>",
    "^@/((?!jpg|png|svg|jpeg|webp|gif).)*$",
    "@/(.*)",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
